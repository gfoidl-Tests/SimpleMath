{
    "compilerOptions": {
        "target"        : "ES2015",
        "module"        : "commonjs",
        "lib"           : [ "ES2015" ],
        "incremental"   : true,
        "declaration"   : true,
        "declarationMap": true,
        "composite"     : true,

        "removeComments"        : true,
        "importHelpers"         : true,
        "experimentalDecorators": true,
        "sourceMap"             : true,
        "newLine"               : "lf",
        "skipLibCheck"          : true,

        "strict"                    : true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny"             : true,
        "noImplicitReturns"         : true,
        "noUnusedLocals"            : true,
        "noUnusedParameters"        : true
    }
}
